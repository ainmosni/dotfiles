[init]
	defaultBranch = main
[core]
    editor = nvim
[include]
	# Local gitconfig
	path = ~/.gitconfig-local
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[color "branch"]
    current = green bold
    local = green
    remote = red bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red
[color "sh"]
    branch = yellow
[commit]
    gpgsign = true
[alias]
	root = rev-parse --show-toplevel
